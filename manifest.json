{
  "name": "Tab Grouper",
  "version": "3.0",
  "description": "Creates a keyboard shortcut (Alt + Shift + G) to add tab to a group",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "tabGroups"
  ],
  "commands": {
    "toggle-pin": {
      "suggested_key": { "default": "Alt+Shift+G" },
      "description": "Add tab to a group"
    }
  },
  "manifest_version": 3
}