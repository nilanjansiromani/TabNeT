{
  "name": "TabNeT",
  "version": "5.0",
  "description": "Handy Shortcuts",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "tabGroups"],
  "commands": {
    "toggle-pin": {
      "description": "Pin the current tab",
      "suggested_key": {
        "windows": "Ctrl+Shift+P",
        "mac": "Ctrl+Shift+P",
        "linux": "Ctrl+Shift+P"
      }
    },
    "discard": {
      "description": "Discard the current tab",
      "suggested_key": {
        "windows": "Ctrl+Shift+D",
        "mac": "Ctrl+Shift+D",
        "linux": "Ctrl+Shift+D"
      }
    },
    "addtogroup": {
      "description": "Create a tab group from the current tab",
      "suggested_key": {
        "windows": "Ctrl+Shift+G",
        "mac": "Ctrl+Shift+G",
        "linux": "Ctrl+Shift+G"
      }
    }
  },
  "manifest_version": 3
}
